	${3:TARGET}
	</textarea>
	${4}

snippet button
options word
	<button>${1:TARGET}</button>${2}

snippet select
options word
	<select>${1:TARGET}</select>${2}

snippet optgroup
	<optgroup label="${1}">
	${2:TARGET}
	<optgroup>${3}

snippet option
options word
	<option value="${1}">${2:TARGET}</option>${3}

snippet label
options word
