# vim:fdm=marker:

# Unicode Entities#{{{
# Non-Breaking Space
snippet nbs
	&nbsp;
# ←
snippet left
	&#x2190;
# →
snippet right
	&#x2192;
# ↑
snippet up
	&#x2191;
# ↓
snippet down
	&#x2193;
# ↩
snippet return
	&#x21A9;
# ⇤
snippet backtab
	&#x21E4;
# ⇥
snippet tab
	&#x21E5;
# ⇧
snippet shift
	&#x21E7;
# ⌃
snippet ctrl
	&#x2303;
# ⌅
snippet enter
	&#x2305;
# ⌘
snippet cmd
	&#x2318;
# ⌥
snippet option
	&#x2325;
# ⌦
snippet delete
	&#x2326;
# ⌫
snippet backspace
	&#x232B;
# ⎋
snippet esc
	&#x238B;
#}}}
# Meta Section#{{{
snippet doc
	<!doctype html>

snippet html
	<!DOCTYPE html>
	<html>
		<head>
			<title>${1}</title>
			<meta charset=utf-8">
			<meta name="author" content="${2}">
			<meta name="description" content="${3}">

			<link rel="shortcut icon" href="${4}/favicon.ico">
			<link rel="stylesheet" href="${5}">

			<script src="${6}"></script>
		</head>
		<body>
			${7}
		</body>
	</html>

snippet author
	<meta name="author" content="${1}">${2}

snippet description
	<meta name="description" content="${1}">${2}
#}}}
snippet script
	<script>
		${1}
	</script>${2}

snippet body
	<body>
		${1}
	</body>

snippet h
options word
	<h${1:1}>${2}</h$1>${3}

snippet p
options word
	<p>${1}</p>${2}

snippet br
options word
	<br />

snippet hr
options word
	<hr />

snippet comment
options word
	<!--${1:TARGET}-->${2}

snippet b
options word
	<b>${1:TARGET}</b>${2}
snippet small
options word
	<small>${1:TARGET}</small>${2}
snippet strong
options word
	<strong>${1:TARGET}</strong>${2}
snippet sub
options word
	<sub>${1:TARGET}</sub>${2}
